<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</tr>
      <th>Genre</th>
      <th>Year</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(function(b) { %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.author %></td>
        <td><%= b.genre %></td>
        <td><%= b.yearPublished %></td>
        <td><a href="/books/<%= b._id %>">DETAILS</a></td>
        <td><a href="/books/<%= b._id %>/favorite">ADD TO FAVORITES</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>